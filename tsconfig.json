{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "declarationMap": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
