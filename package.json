{
  "name": "joi-to-typescript",
  "description": "Convert Joi Schemas to TypeScript interfaces",
  "version": "1.11.0",
  "author": "Jono Clarnette",
  "keywords": [
    "joi",
    "ts",
    "typescript",
    "hapi",
    "interface"
  ],
  "license": "MIT",
  "repository": {
    "url": "https://github.com/mrjono1/joi-to-typescript",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/mrjono1/joi-to-typescript/issues"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "eslint 'src/**'",
    "test": "jest --config jest.config.js",
    "coverage": "yarn test --coverage --silent",
    "pub": "tsc && yarn publish"
  },
  "dependencies": {
    "joi": "^17.3.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "^12.12.6",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.2",
    "typescript": "4.1.5"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
